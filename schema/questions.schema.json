{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "questions",
  "type": "object",
  "title": "Schema for Questions",
  "definitions": {
    "numberQuestion": {
      "type": "object",
      "title": "Number Question",
      "description": "A question where you hav to guess a number (could be a year or e.G. number of polar bears alive)",
      "properties": {
        "type": {
          "description": "The questions type",
          "type": "string",
          "enum": [
            "number"
          ]
        },
        "question": {
          "description": "The questions question",
          "type": "string"
        },
        "solution": {
          "description": "The questions right solution",
          "type": "number"
        }
      },
      "required": [
        "type",
        "question",
        "solution"
      ],
      "examples": [
        {
          "type": "number",
          "question": "When did the french revolution start?",
          "solution": 1789
        }
      ]
    },
    "votingQuestion": {
      "type": "object",
      "title": "Voting",
      "description": "A question where one of the members is voted",
      "properties": {
        "type": {
          "description": "The questions type",
          "type": "string",
          "enum": [
            "voting"
          ]
        },
        "question": {
          "description": "The questions question",
          "type": "string"
        },
        "sips": {
          "description": "how many sips the elected game member has to drink",
          "type": "number",
          "default": 3
        }
      },
      "required": [
        "type",
        "question"
      ],
      "examples": [
        {
          "type": "voting",
          "question": "Who is the funniest in the group?"
        }
      ]
    },
    "multipleChoiceQuestion": {
      "type": "object",
      "title": "Multible Choice",
      "properties": {
        "type": {
          "description": "The questions type",
          "type": "string",
          "enum": [
            "multibleChoice"
          ]
        },
        "question": {
          "description": "The questions question",
          "type": "string"
        },
        "solutions": {
          "description": "An array containing the possible Solutions",
          "type": "array",
          "minItems": 2,
          "maxItems": 10,
          "items": {
            "type": "string"
          }
        },
        "correctSolution": {
          "description": "The index of the correct solution. (Indexing starts with 0",
          "type": "number",
          "minimum": 0,
          "multipleOf": 1
        },
        "sips": {
          "description": "how many sips the people, who picked to wrong answer have to drink",
          "type": "number",
          "default": 3
        }
      },
      "required": [
        "type",
        "question",
        "correctSolution",
        "solutions"
      ],
      "examples": [
        {
          "type": "multibleChoice",
          "question": "Which movie won the oscar for best motion picture in 2020?",
          "correctSolution": 1,
          "solutions": [
            "Joker",
            "Parasite",
            "Once upon a time in Hollywood",
            "1917"
          ]
        }
      ]
    },
    "majorityQuestion": {
      "description": "Let them vote on a topic. The people in the minority will be wrong and have to drink.",
      "type": "object",
      "title": "Majority vote",
      "properties": {
        "type": {
          "description": "The questions type",
          "type": "string",
          "enum": [
            "majority"
          ]
        },
        "question": {
          "description": "The questions question",
          "type": "string"
        },
        "solutions": {
          "description": "An array containing the possible Solutions",
          "type": "array",
          "minItems": 2,
          "maxItems": 10,
          "items": {
            "type": "string"
          }
        },
        "sips": {
          "description": "how many sips the minority's members have to drink",
          "type": "number",
          "default": 3
        }
      },
      "required": [
        "type",
        "question",
        "solutions"
      ],
      "examples": [
        {
          "type": "majority",
          "question": "Whats more important?",
          "solutions": [
            "Body",
            "Character"
          ]
        }
      ]
    },
    "neverHaveIever": {
      "description": "Never Have I Ever Question",
      "title": "Never Have I Ever",
      "type": "object",
      "properties": {
        "type": {
          "description": "The questions type",
          "type": "string",
          "enum": [
            "neverHaveIever"
          ]
        },
        "question": {
          "description": "The questions question",
          "type": "string"
        },
        "sips": {
          "description": "how many sips the people, who picked to wrong answer have to drink",
          "type": "number",
          "default": 3
        }
      },
      "required": [
        "type",
        "question"
      ],
      "examples": [
        {
          "type": "neverHaveIever",
          "question": "I never cheated"
        }
      ]
    }
  },
  "properties": {
    "title": {
      "description": "Title of the questionset",
      "type": "string"
    },
    "description": {
      "description": "A description for the questionset",
      "type": "string"
    },
    "questions": {
      "description": "The questionset's questions",
      "title": "Questions",
      "type": "array",
      "items": {
        "title": "Questiontypes",
        "oneOf": [
          {
            "$ref": "#/definitions/numberQuestion"
          },
          {
            "$ref": "#/definitions/votingQuestion"
          },
          {
            "$ref": "#/definitions/multipleChoiceQuestion"
          },
          {
            "$ref": "#/definitions/majorityQuestion"
          },
          {
            "$ref": "#/definitions/neverHaveIever"
          }
        ]
      }
    }
  },
  "required": [
    "title",
    "description",
    "questions"
  ]
}
