{
  "name": "@eosdg/questions",
  "private": false,
  "version": "0.4.0",
  "description": "Questions for the Games",
  "main": "dist/bundle.js",
  "files": [
    "dist/*"
  ],
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:old": "node --experimental-vm-modules node_modules/jest/bin/jest.js --colors",
    "build": "rollup -c rollup.config.js",
    "build:test": "rollup -c rollup.test.config.js",
    "zip": "zip-folder dist",
    "release": "dotenv release-it",
    "doc": " npx @adobe/jsonschema2md -d schema -o docs",
    "clean": "npm run clean:build && npm run clean:testDist",
    "clean:build": "del-cli dist",
    "clean:testDist": "del-cli testDist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eosdg/questions.git"
  },
  "author": "Julian Pollinger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eosdg/questions/issues"
  },
  "homepage": "https://github.com/eosdg/questions#readme",
  "devDependencies": {
    "@adobe/jsonschema2md": "^5.0.2",
    "@neferin/zip-folder": "^1.0.4",
    "@rollup/plugin-json": "^4.1.0",
    "del-cli": "^3.0.1",
    "dotenv-cli": "^4.0.0",
    "jest": "^26.6.3",
    "jest-json-schema": "^2.1.0",
    "jest-junit": "^12.0.0",
    "release-it": "^14.2.2",
    "rollup": "^2.35.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "jest-junit": {
    "suiteName": "Fragen Tests",
    "includeConsoleOutput": true
  }
}
